<?xml version="1.0" encoding="UTF-8"?>
<!-- ↑ XML 헤더(반드시 첫 번째 줄에 위치) -->

<!-- dtd선언 -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- mapper -->
<mapper namespace="tag">
	
	<!-- 태그 시퀀스 생성 -->
	<select id="sequence" resultType="Long">
		select tag_seq.nextval from dual
	</select>
	
	<!-- 태그 생성 -->
	<insert id="insert">
		insert into tag
		(tag_no,post_no,tag_type,tag_name)
		values
		(#{tagNo},#{postNo},#{tagType},#{tagName})
	</insert>
	
	<!-- 태그 조회 -->
	<select id="selectOne" resultType="Long">
		select tag_no from tag where tag_Name=#{tagName}
	</select>
	
	<!-- 태그 전체 조회 -->
	<select id="seletAll" resultType="String">
		select * from tag where post_no = #{post_no}
	</select>
	
	<!-- 자유 태그 삭제 -->
	<delete id="delete">
		delete from tag
		where tag_no = #{tagNo}
	</delete>
	
	
</mapper>